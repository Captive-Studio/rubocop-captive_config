{
  "devDependencies": {
    "husky": "8.0.3",
    "lint-staged": "13.3.0"
  },
  "scripts": {
    "docs": "export DOC_DIR=docs; yard -o $DOC_DIR && git add $DOC_DIR/",
    "prepare": "husky install",
    "postinstall": "npm run prepare"
  },
  "lint-staged": {
    "lib/**/*.rb": [
      "npm run docs"
    ]
  },
  "packageManager": "yarn@3.6.1"
}
